#!/usr/bin/env bash
# Script that configures an Ubuntu machine to install and configure Nginx

# Update package list
apt-get update -y

# Install Nginx
apt-get install nginx -y

# Create a simple HTML page with "Holberton School"
echo "Holberton School for the win!" > /var/www/html/index.html

# Ensure Nginx is listening on port 80 (default configuration)
# Start Nginx service
service nginx start
